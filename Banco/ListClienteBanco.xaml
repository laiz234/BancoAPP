<Window x:Class="Banco.ListClienteBanco"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Banco"
        mc:Ignorable="d"
        Title="Listar Clientes do Banco" Height="250" Width="400">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="19,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Language="pt-br" Text="Banco:"/></TextBlock>
        <TextBox HorizontalAlignment="Left" Margin="19,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Content="Listar Clientes" HorizontalAlignment="Left" Margin="19,57,0,0" VerticalAlignment="Top" Click="ListarClick"/>
        <ListBox Name="listClientes" Margin="10,82,10,10"/>
    </Grid>
</Window>
